{
  "name": "claude-pocket-console",
  "version": "0.0.0",
  "private": true,
  "description": "A secure, real-time web terminal powered by isolated Docker containers",
  "homepage": "https://github.com/claudes-world/claude-pocket-console",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/claudes-world/claude-pocket-console.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,json,yml,yaml}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "convex:push": "pnpm --filter convex push",
    "docker:build": "docker build -f infrastructure/docker/Dockerfile.sandbox -t cpc/sandbox:latest infrastructure/docker"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "husky": "^9.0.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  }
}
