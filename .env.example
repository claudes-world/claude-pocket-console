# Claude Pocket Console Environment Variables
# Copy this file to .env.local and fill in the values

# Convex Configuration
# Get these from https://dashboard.convex.dev
CONVEX_DEPLOY_KEY=
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# GitHub OAuth Configuration
# Create OAuth App at https://github.com/settings/developers
# Homepage URL: http://localhost:3000
# Authorization callback URL: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Docker Configuration
DOCKER_SANDBOX_IMAGE=cpc/sandbox:latest
DOCKER_NETWORK_NAME=cpc-network
DOCKER_VOLUME_PREFIX=cpc-volume

# Terminal Server Configuration
TERMINAL_SERVER_HOST=0.0.0.0
TERMINAL_SERVER_PORT=8000
TERMINAL_SERVER_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security Configuration
# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT=3600
# Maximum concurrent sessions per user
MAX_SESSIONS_PER_USER=5
# Enable debug mode (set to false in production)
DEBUG=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring and Analytics (Optional)
SENTRY_DSN=
POSTHOG_KEY=
POSTHOG_HOST=https://app.posthog.com

# Feature Flags (Optional)
ENABLE_COMMAND_HISTORY=true
ENABLE_FILE_UPLOADS=false
ENABLE_COLLABORATIVE_SESSIONS=false

# Resource Limits
# Maximum container CPU (in cores, e.g., 0.5 = half core)
CONTAINER_CPU_LIMIT=0.5
# Maximum container memory (e.g., 512m, 1g)
CONTAINER_MEMORY_LIMIT=512m
# Container timeout in seconds
CONTAINER_TIMEOUT=300

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development Only
# Hot reload for Next.js
WATCHPACK_POLLING=false
# Node.js inspector
NODE_OPTIONS=--max-old-space-size=4096

# Production Only (when deployed)
# VERCEL_URL=
# RAILWAY_STATIC_URL=
# DATABASE_URL=
# REDIS_URL=